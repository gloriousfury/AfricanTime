<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_test_score_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_fifty">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/two_fifty"
            android:background="@color/light_grey" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred"
            android:layout_marginLeft="@dimen/twenty"
            android:layout_marginRight="@dimen/twenty"
            android:layout_marginTop="@dimen/fifty"
            android:background="@drawable/white_border"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="60sp"

                />

            <TextView
                android:id="@+id/baseline_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="/5"
                android:textColor="@color/white"
                android:textSize="60sp"

                />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_corrections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corrections"
            android:textColor="@color/app_white_smoke"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginLeft="@dimen/five"
            />


        <Button
            android:id="@+id/btn_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"

            android:text="RESTART" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/correctionView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        </android.support.v7.widget.RecyclerView>


    </android.support.v7.widget.CardView>


</LinearLayout>


